<%-include('../partials/adminHeader')-%>
    <section class="content-main">
        <form action="/admin/addofferproduct" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-9">
                    <div class="content-header">
                        <h2 class="content-title">Add New Product</h2>
                        <div>
                            <!-- <button class="btn btn-light rounded font-sm mr-5 text-body hover-up">Save to draft</button> -->
                            <button class="btn btn-md rounded font-sm hover-up" id="add-btn">Add product</button>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4>Basic</h4>
                        </div>
                        <div class="card-body">
                            <form>
                                <div class="mb-4">
                                    <label for="product_name" class="form-label">Product title</label>
                                    <input type="text" name="title" placeholder="Type here" class="form-control"
                                        id="product_name" required>
                                </div>
                                <div class="mb-4">
                                    <label for="product_name" class="form-label">Brand:</label>
                                    <select name="brand" class="form-select form-select-sm"
                                        aria-label=".form-select-sm example" required>
                                        <% brand.forEach(function(brand) { %>
                                            <option value="<%=brand.brand%>">
                                                <%=brand.brand%>
                                            </option>
                                            <%})%>
                                    </select>
                                    <a href="/admin/addbrand" role="button">Addbrand</a>
                                </div>
                                <div class="mb-4">
                                    <label class="form-label">Product Description</label>
                                    <textarea type="text" name="description" placeholder="Type here"
                                        class="form-control" id="product_name"></textarea>
                                </div>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="mb-4">
                                            <label class="form-label">Regular price</label>
                                            <div class="row gx-2">
                                                <input placeholder="Rs" name="price" type="text" class="form-control"
                                                    required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="mb-4">
                                            <label class="form-label">Quantity</label>
                                            <input type="text" name="quantity" placeholder="Quantity"
                                                class="form-control" id="product_name" required>
                                        </div>
                                    </div>
                                    <!-- <div class="col-lg-4">
                                        <div class="mb-4">
                                            <label class="form-label">size</label>
                                            <input type="text" name="size" placeholder="size" class="form-control"
                                                id="product_name" required>
                                        </div>
                                    </div> -->
                                    
                                
                                <div class="col-lg-6">
                                    <div class="mb-4">
                                        <label class="form-label">Offer</label>
                                        <input type="text" name="offer" placeholder="offer" class="form-control"
                                        id="" required>
                                    </div>
                                    
                                </div>
                                <div class="col-lg-6">
                                    <div class="mb-4">
                                        <label class="form-label">Color</label>
                                        <input type="text" name="color" placeholder="color" class="form-control"
                                            id="product_name" required>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <label class="form-label">Size </label>
                                    <div class="mb-4" style="display: flex;">
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="checkbox" name="size" id="size36" value="36">
                                            <label class="form-check-label" for="size36">36</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="checkbox" name="size" id="size37" value="37">
                                            <label class="form-check-label" for="size37">37</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="checkbox" name="size" id="size38" value="38">
                                            <label class="form-check-label" for="size38">38</label>
                                        </div>
                                        <!-- Add more size options as needed -->
                                    </div>
                                    
                                    
                                    
                                </div>
                                <div class="col-lg-12">
                                    <div class="mb-4">
                                        <label class="form-label">Expiry</label>
                                        <input type="date" name="date" placeholder="dd-mm-yy" class="form-control"
                                            id="" required>
                                    </div>
                                    </div>
                                </div>
                            </div>
                                </div>
                                </div>


                            </form>
                        <!-- </div> -->
                    <!-- </div> -->

                <div class="col-lg-4">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4>Media</h4>
                        </div>
                        <div class="card-body">
                            
                            <div class="input-upload">
                             <img id="previewImage" src="assetadmin/imgs/theme/upload.svg" alt="Image Preview">
                                <input class="form-control" type="file" name="image"  id="imageInput" required multiple>
                            </div>
                            
                        </div>
                    </div> <!-- card end// -->
                    <div class="card mb-4">

                        <div class="card-body">
                            <div class="row gx-2">
                                <div class="card-body">
                                    <div class="row gx-2">
                                        <div class="col-sm-12 mb-3">
                                            <label class="form-label">Category</label>
                                            <select class="form-select" name="category">
                                                <% category.forEach(function(category) { %>

                                                    <option value="<%=category.name%>">
                                                        <%=category.name%>
                                                    </option>

                                                    <% }); %>
                                            </select>



                                        </div>


                                  
                                </div>
                                <div class="card-body">
                                    <div class="row gx-2">
                                        <div class="col-sm-12 mb-3">
                                            <label class="form-label">Category1</label>
                                            <select class="form-select" name="category1" required>

                                                <option value="Women">Women</option>
                                                <option value="Mens">Mens</option>


                                            </select>
                                        </div>
                                    </div>
                                </div>
                                

                            </div> <!-- row.// -->
                        </div>
                    </div> <!-- card end// -->


                </div>
            </div>
        </form>
    </section> <!-- content-main end// -->
